@{
    ViewData["Title"] = "Anasayfa";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12 mb-4">
            <div class="card bg-gradient-primary text-white">
                <div class="card-body p-4">
                    <h1 class="display-4 fw-bold">
                        <i class="fas fa-calendar-check"></i> Yoklama ve Devamsızlık Sistemi
                    </h1>
                    <p class="lead">Öğrenci ve çalışanların devamsızlık kayıtlarını kolayca yönetin.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card h-100 border-left-primary">
                <div class="card-header bg-transparent">
                    <h3 class="text-primary mb-0">
                        <i class="fas fa-users fa-fw"></i> Kullanıcı Yönetimi
                    </h3>
                </div>
                <div class="card-body">
                    <p class="text-muted">Öğrenci ve çalışanların bilgilerini yönetin.</p>
                    <ul class="list-unstyled feature-list">
                        <li><i class="fas fa-check text-success me-2"></i>Kullanıcı ekleme</li>
                        <li><i class="fas fa-check text-success me-2"></i>Bilgi güncelleme</li>
                        <li><i class="fas fa-check text-success me-2"></i>Detaylı görüntüleme</li>
                    </ul>
                </div>
                <div class="card-footer bg-transparent">
                    <a href="@Url.Action("Index", "User")" class="btn btn-primary btn-block">
                        <i class="fas fa-arrow-right"></i> Kullanıcıları Yönet
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 border-left-success">
                <div class="card-header bg-transparent">
                    <h3 class="text-success mb-0">
                        <i class="fas fa-calendar-check fa-fw"></i> Devamsızlık Takibi
                    </h3>
                </div>
                <div class="card-body">
                    <p class="text-muted">Devamsızlık kayıtlarını yönetin ve takip edin.</p>
                    <ul class="list-unstyled feature-list">
                        <li><i class="fas fa-check text-success me-2"></i>Devamsızlık kaydı oluşturma</li>
                        <li><i class="fas fa-check text-success me-2"></i>Onay işlemleri</li>
                        <li><i class="fas fa-check text-success me-2"></i>Raporlama</li>
                    </ul>
                </div>
                <div class="card-footer bg-transparent">
                    <a href="@Url.Action("Index", "Devamsizlik")" class="btn btn-success btn-block">
                        <i class="fas fa-arrow-right"></i> Devamsızlıkları Yönet
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 border-left-info">
                <div class="card-header bg-transparent">
                    <h3 class="text-info mb-0">
                        <i class="fas fa-chart-bar fa-fw"></i> İstatistikler
                    </h3>
                </div>
                <div class="card-body">
                    <p class="text-muted">Devamsızlık istatistiklerini görüntüleyin.</p>
                    <ul class="list-unstyled feature-list">
                        <li><i class="fas fa-check text-success me-2"></i>Aylık raporlar</li>
                        <li><i class="fas fa-check text-success me-2"></i>Kullanıcı bazlı analiz</li>
                        <li><i class="fas fa-check text-success me-2"></i>Devamsızlık türü dağılımı</li>
                    </ul>
                </div>
                <div class="card-footer bg-transparent">
                    <a href="@Url.Action("Index", "Istatistik")" class="btn btn-info btn-block text-white">
                        <i class="fas fa-arrow-right"></i> İstatistikleri Görüntüle
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h3 class="mb-0 text-gray-800">
                        <i class="fas fa-info-circle"></i> Sistem Özellikleri
                    </h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-4">
                            <div class="d-flex align-items-center">
                                <div class="feature-icon text-primary me-3">
                                    <i class="fas fa-shield-alt fa-2x"></i>
                                </div>
                                <div>
                                    <h4 class="mb-1">Güvenli ve Güvenilir</h4>
                                    <p class="text-muted mb-0">Tüm verileriniz güvenli bir şekilde saklanır ve yedeklenir.</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-4">
                            <div class="d-flex align-items-center">
                                <div class="feature-icon text-success me-3">
                                    <i class="fas fa-tachometer-alt fa-2x"></i>
                                </div>
                                <div>
                                    <h4 class="mb-1">Hızlı ve Kullanıcı Dostu</h4>
                                    <p class="text-muted mb-0">Kolay kullanım ve hızlı işlem yapma imkanı sunar.</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-4">
                            <div class="d-flex align-items-center">
                                <div class="feature-icon text-info me-3">
                                    <i class="fas fa-chart-line fa-2x"></i>
                                </div>
                                <div>
                                    <h4 class="mb-1">Detaylı Raporlama</h4>
                                    <p class="text-muted mb-0">Kapsamlı istatistikler ve raporlama özellikleri.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-4 mb-4">
                            <div class="d-flex align-items-center">
                                <div class="feature-icon text-warning me-3">
                                    <i class="fas fa-server fa-2x"></i>
                                </div>
                                <div>
                                    <h4 class="mb-1">Yüksek Performans</h4>
                                    <p class="text-muted mb-0">Hızlı ve verimli sistem altyapısı.</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-4">
                            <div class="d-flex align-items-center">
                                <div class="feature-icon text-danger me-3">
                                    <i class="fas fa-database fa-2x"></i>
                                </div>
                                <div>
                                    <h4 class="mb-1">Veri Güvenliği</h4>
                                    <p class="text-muted mb-0">Modern ve güvenli veri depolama teknolojisi.</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-4">
                            <div class="d-flex align-items-center">
                                <div class="feature-icon text-secondary me-3">
                                    <i class="fas fa-cogs fa-2x"></i>
                                </div>
                                <div>
                                    <h4 class="mb-1">Esnek Mimari</h4>
                                    <p class="text-muted mb-0">Kolay genişletilebilir ve ölçeklenebilir sistem.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, var(--primary-color), #224abe);
    }

    .border-left-primary {
        border-left: 4px solid var(--primary-color);
    }

    .border-left-success {
        border-left: 4px solid var(--success-color);
    }

    .border-left-info {
        border-left: 4px solid var(--info-color);
    }

    .feature-list li {
        margin-bottom: 0.75rem;
        display: flex;
        align-items: center;
    }

    .btn-block {
        width: 100%;
    }

    .card-header h3 {
        font-size: 1.25rem;
    }

    .feature-icon {
        width: 60px;
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 10px;
        background: rgba(0,0,0,0.05);
    }

    .text-gray-800 {
        color: #2d3748;
    }
</style>

@section Scripts {
    <script>
        setTimeout(function () {
            $('.alert').alert('close');
        }, 5000);
    </script>
}