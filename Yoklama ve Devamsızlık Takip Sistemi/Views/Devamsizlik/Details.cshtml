@model DevamsizlikTakip.Models.Devamsizlik
@using DevamsizlikTakip.Models

@{
    ViewData["Title"] = "Devamsızlık Detayları";
}

<div class="card">
    <div class="card-header bg-info text-white">
        <h2><i class="fas fa-info-circle"></i> Devamsızlık Detayları</h2>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.User)</dt>
            <dd class="col-sm-9">
                <span class="badge bg-info">@Model.User.KullaniciTipi</span>
                @Model.User.Ad @Model.User.Soyad
            </dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.BaslangicTarihi)</dt>
            <dd class="col-sm-9">@Model.BaslangicTarihi.ToShortDateString()</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.BitisTarihi)</dt>
            <dd class="col-sm-9">@Model.BitisTarihi.ToShortDateString()</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DevamsizlikTipi)</dt>
            <dd class="col-sm-9">
                <span class="badge bg-primary">@Model.DevamsizlikTipi</span>
            </dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Aciklama)</dt>
            <dd class="col-sm-9">@Model.Aciklama</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Onaylandi)</dt>
            <dd class="col-sm-9">
                @if (Model.Onaylandi)
                {
                    <span class="badge bg-success">Onaylandı</span>
                }
                else
                {
                    <span class="badge bg-warning">Beklemede</span>
                }
            </dd>
        </dl>

        <div class="mt-3">
            <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning">
                <i class="fas fa-edit"></i> Düzenle
            </a>
            <a href="@Url.Action("Delete", new { id = Model.Id })" class="btn btn-danger">
                <i class="fas fa-trash"></i> Sil
            </a>
            <a href="@Url.Action("Index")" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Listeye Dön
            </a>
        </div>
    </div>
</div> 