@model DevamsizlikTakip.Models.LoginViewModel
@{
    ViewData["Title"] = "Giriş Yap";
    Layout = "_LoginLayout";
}

<div class="main-container">
    <div class="login-box">
        <!-- Sol Panel -->
        <div class="info-side">
            <div class="info-content">
                <div class="logo">
                    <i class="fas fa-calendar-check fa-3x text-white"></i>
                </div>
                <h1>
                    Smart Presence
                </h1>

                <div class="features">
                    <div class="feature-item">
                        <i class="fas fa-chart-line fa-2x"></i>
                        <h3>Gerçek Zamanlı Takip</h3>
                        <p>Anlık yoklama bildirimleri ve devamsızlık takibi</p>
                    </div>
                    <div class="feature-item">
                        <i class="fas fa-bell fa-2x"></i>
                        <h3>Akıllı Bildirimler</h3>
                        <p>Otomatik  bilgilendirme sistemi</p>
                    </div>
                    <div class="feature-item">
                        <i class="fas fa-file-alt fa-2x"></i>
                        <h3>Detaylı Raporlama</h3>
                        <p>Öğrenci bazlı analitik raporlar</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sağ Panel -->
        <div class="login-side">
            <div class="login-content">
                <h2>Hoş Geldiniz</h2>
                <p class="subtitle">Lütfen bilgileriniz ile giriş yapın</p>

                <form asp-action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="input-group">
                        <label asp-for="Email">
                            <i class="fas fa-envelope"></i>
                            E-posta Adresi
                        </label>
                        <input asp-for="Email" class="input-field" placeholder="ornek@email.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="input-group">
                        <label asp-for="TCKimlik">
                            <i class="fas fa-id-card"></i>
                            TC Kimlik No
                        </label>
                        <input asp-for="TCKimlik" class="input-field" placeholder="TC Kimlik Numarası" autocomplete="off" />
                        <span asp-validation-for="TCKimlik" class="text-danger"></span>
                    </div>

                    <button type="submit" class="submit-btn">
                        Giriş Yap
                        <i class="fas fa-arrow-right"></i>
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Segoe UI', Arial, sans-serif;
        background: #f0f2f5;
        min-height: 100vh;
    }

    .main-container {
        width: 100%;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
    }

    .login-box {
        width: 100%;
        max-width: 1200px;
        min-height: 600px;
        background: white;
        border-radius: 20px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        display: flex;
        overflow: hidden;
    }

    .info-side {
        width: 50%;
        background: linear-gradient(135deg, #4A90E2, #5C6BC0);
        color: white;
        padding: 40px;
    }

    .info-content {
        max-width: 400px;
        margin: 0 auto;
    }

    .logo {
        width: 80px;
        height: 80px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
    }

    .info-side h1 {
        text-align: center;
        margin-bottom: 40px;
        font-size: 28px;
    }

    .features {
        display: flex;
        flex-direction: column;
        gap: 30px;
    }

    .feature-item {
        text-align: center;
        padding: 20px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 10px;
    }

        .feature-item i {
            margin-bottom: 15px;
        }

        .feature-item h3 {
            margin-bottom: 10px;
            font-size: 20px;
        }

    .login-side {
        width: 50%;
        padding: 40px;
        display: flex;
        align-items: center;
    }

    .login-content {
        width: 100%;
        max-width: 400px;
        margin: 0 auto;
    }

        .login-content h2 {
            font-size: 32px;
            color: #333;
            margin-bottom: 10px;
        }

    .subtitle {
        color: #666;
        margin-bottom: 30px;
    }

    .input-group {
        margin-bottom: 20px;
    }

        .input-group label {
            display: flex;
            align-items: center;
            gap: 8px;
            margin-bottom: 8px;
            color: #333;
        }

    .input-field {
        width: 100%;
        padding: 12px;
        border: 2px solid #eee;
        border-radius: 8px;
        font-size: 16px;
        transition: border-color 0.3s;
    }

        .input-field:focus {
            border-color: #4A90E2;
            outline: none;
        }

    .submit-btn {
        width: 100%;
        padding: 14px;
        background: #4A90E2;
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        cursor: pointer;
        transition: background 0.3s;
    }

        .submit-btn:hover {
            background: #357ABD;
        }

    /* Responsive tasarım için CSS */
    @@media only screen and (max-width: 800px) {
        .login-box {
            flex-direction: column;
            max-width: 500px;
        }

        .info-side,
        .login-side {
            width: 100%;
        }

        .info-side {
            padding: 30px 20px;
        }

        .login-side {
            padding: 30px 20px;
        }

        .features {
            gap: 20px;
        }

        .feature-item {
            padding: 15px;
        }
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}