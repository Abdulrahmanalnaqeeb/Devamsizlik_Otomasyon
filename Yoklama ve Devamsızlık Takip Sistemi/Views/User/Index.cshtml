@model IEnumerable<DevamsizlikTakip.Models.User>

@{
    ViewData["Title"] = "Kullanıcı Listesi";
}

<div class="card">
    <div class="card-header">
        <h2><i class="fas fa-users"></i> Kullanıcı Listesi</h2>
    </div>
    <div class="card-body">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <p>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Yeni Kullanıcı Ekle
            </a>
        </p>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-light">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Ad)</th>
                        <th>@Html.DisplayNameFor(model => model.Soyad)</th>
                        <th>@Html.DisplayNameFor(model => model.TCKimlik)</th>
                        <th>@Html.DisplayNameFor(model => model.Email)</th>
                        <th>@Html.DisplayNameFor(model => model.Telefon)</th>
                        <th>@Html.DisplayNameFor(model => model.KullaniciTipi)</th>
                        <th>@Html.DisplayNameFor(model => model.Sinif)</th>
                        <th>@Html.DisplayNameFor(model => model.Departman)</th>
                        <th style="width: 200px;">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Ad)</td>
                            <td>@Html.DisplayFor(modelItem => item.Soyad)</td>
                            <td>@Html.DisplayFor(modelItem => item.TCKimlik)</td>
                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                            <td>@Html.DisplayFor(modelItem => item.Telefon)</td>
                            <td>
                                <span class="badge bg-info">
                                    @Html.DisplayFor(modelItem => item.KullaniciTipi)
                                </span>
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.Sinif)</td>
                            <td>@Html.DisplayFor(modelItem => item.Departman)</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-warning btn-sm" title="Düzenle">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-info btn-sm" title="Detaylar">
                                        <i class="fas fa-info-circle"></i>
                                    </a>
                                    <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger btn-sm" title="Sil">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // 5 saniye sonra başarı mesajını otomatik kapat
        setTimeout(function () {
            $('.alert').alert('close');
        }, 5000);

        // Tooltip'leri etkinleştir
        $(function () {
            $('[title]').tooltip();
        });
    </script>
}
